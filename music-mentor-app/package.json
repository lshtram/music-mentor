{
  "name": "music-mentor-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/check-db-schema.mjs || true",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ci": "npm run lint && npm run test",
    "prepare": "husky install",
    "postinstall": "if [ -z \"$CI\" ]; then npx playwright install --with-deps; fi",
    "db:check": "node scripts/check-db-schema.mjs"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.89.0",
    "next": "14.2.35",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "postcss": "^8",
    "@playwright/test": "^1.48.2",
    "playwright": "^1.48.2",
    "husky": "^9.1.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16"
  }
}
